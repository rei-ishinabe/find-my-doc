<div class="container-fluid card mt-5 p-5">
  <div class="row">
    <div class="col-12">
      <h3>Make a new appointment with Dr. <%= @doctor.full_name %></h3>
      <p>Opening hours: <%= @doctor.opening_hours %></p>
      <%= simple_form_for [@doctor, @appointment] do |f| %>
      <div class="form-group mt-3">
        <%= f.datetime_select :date, class:'form-control' %>
      </div>
      <%= f.submit 'Make an appointment', class:'btn btn-primary mt-3' %>
      <% end %>
    </div>
  </div>
  <% if @time %>
  <% sp =@time.split("-") %>
  <% x = sp[0].split(":") %>
  <script>
    document.getElementById("appointment_date_4i").innerHTML ="<option>"+<%= x[0]  %>+"</option>"
    document.getElementById("appointment_date_5i").innerHTML ="<option>"+<%= x[1]  %>+"</option>"
    document.getElementById("appointment_date_1i").innerHTML ="<option>"+<%= sp[1]  %>+"</option>"
    document.getElementById("appointment_date_2i").innerHTML ="<option>"+<%= sp[2]  %>+"</option>"
    document.getElementById("appointment_date_3i").innerHTML ="<option>"+<%= sp[3]  %>+"</option>"
  </script>
  <% end %>
</div>

