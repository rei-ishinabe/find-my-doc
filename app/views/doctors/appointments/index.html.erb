<div class="container mt-3">
  <div class="wrapper">
    <div class="row justify-content-center">
      <div class="col-12">
        <h1>Your appointments</h1>
        <% @appointments.each do |appointment| %>
          <div class="card-product py-5">
<!--             <img src="<%= appointment.doctor.photo %>"> -->
            <div class="card-product-infos">
              <h3><%= appointment.date.strftime("%a, %b %e %l:%M %p") %> </h3>
              <h2><%= appointment.user.full_name %>
              <p><i class="fas fa-phone"></i> <%= appointment.user.phone_number %></p>
              <p><i class="fas fa-envelope"></i> <%= appointment.user.email %></p>
              <% if appointment.is_confirmed %>
                <p class="text-success font-weight-bold">Confirmed</p>
              <% else %>
                <p class="text-warning font-weight-bold">Not confirmed yet</p>
              <% end %>
          </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
