  <div class="mt-5">
    <%= link_to  doctors_path, class: "btn btn-primary pl-5" do %>
      <i class="fas fa-arrow-circle-left"></i>
    <% end %>
  </div>
<div class="container">
  <div class="row justify-content-center">
    <div class="col-12 ">
      <div class="row no-gutters">
        <div class="col-md-6 card-detail mb-3 mt-3 d-flex justify-content-between">

          <div class="" style="height: 100%; position: relative;" >
         <%= cl_image_tag(@doctor.photo,
      width: 220, height: 300, crop: :thumb, gravity: :face, class: "img-fluid" ) %>
          <div class="card-shadow">
          </div>
          </div>

      <div class="" style="width: 310px">
        <div class="card-body">
          <h4 class="card-title mb-1"><%= @doctor.full_name %></h4>
          <h5 class="card-text mb-3"><small class="text-muted"><%= @doctor.speciality %></small></h5>
          <p class="card-text"><i class="fas fa-envelope"></i> <%=  @doctor.email %></p>
          <p class="card-text"><i class="fas fa-phone"></i> <%= @doctor.phone_number %></p>
        </div>
      </div>
    </div>


    <div class="col-md-1">

    </div>

    <div class="card card-detail col-md-5 mb-3 mt-3 pt-2 text-center" style="font-size: x-small;">
      <%= render 'shared/calendar', doctor: @doctor, times_do: 6, short: false %>
    </div>
  </div>
</div>
</div>
<div class="container">
  <div class="row">
    <div class="col-12">
      <div class="col-md-6 card-detail">
        <ul>
          <% @doctor.reviews.each do |review| %>
            <li><% review.stars.times do %>
              <i class="fas fa-star"></i>
              <% end %>
              <% (5 - review.stars).times do %>
              <i class="far fa-star"></i>
              <% end %>
            <%= review.content %>, by <%= review.user.full_name %></li>
          <% end %>
      </ul>
      </div>
    </div>
  </div>
</div>
<div class="container">
  <div class="row justify-content-center">
    <div class="col-12 ">
      <div
        id="map"
        style="width: 100%;
        height: 600px;"
        data-markers="<%= @markers.to_json %>"
        data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
      ></div>
    </div>
  </div>
</div>


